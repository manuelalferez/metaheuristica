<?xml version="1.0" encoding="UTF-8"?>
<project name="module_meta-pr1" default="compile.module.meta-pr1">
  <dirname property="module.meta-pr1.basedir" file="${ant.file.module_meta-pr1}"/>
  
  <property name="module.jdk.home.meta-pr1" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.meta-pr1" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.meta-pr1" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.meta-pr1" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="meta-pr1.output.dir" value="${module.meta-pr1.basedir}/out/production/meta-pr1"/>
  <property name="meta-pr1.testoutput.dir" value="${module.meta-pr1.basedir}/out/test/meta-pr1"/>
  
  <path id="meta-pr1.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="meta-pr1.module.production.classpath">
    <path refid="${module.jdk.classpath.meta-pr1}"/>
  </path>
  
  <path id="meta-pr1.runtime.production.module.classpath">
    <pathelement location="${meta-pr1.output.dir}"/>
  </path>
  
  <path id="meta-pr1.module.classpath">
    <path refid="${module.jdk.classpath.meta-pr1}"/>
    <pathelement location="${meta-pr1.output.dir}"/>
  </path>
  
  <path id="meta-pr1.runtime.module.classpath">
    <pathelement location="${meta-pr1.testoutput.dir}"/>
    <pathelement location="${meta-pr1.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.meta-pr1">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.meta-pr1">
    <patternset refid="excluded.from.module.meta-pr1"/>
  </patternset>
  
  <path id="meta-pr1.module.sourcepath">
    <dirset dir="${module.meta-pr1.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.meta-pr1" depends="compile.module.meta-pr1.production,compile.module.meta-pr1.tests" description="Compile module meta-pr1"/>
  
  <target name="compile.module.meta-pr1.production" depends="register.custom.compilers" description="Compile module meta-pr1; production classes">
    <mkdir dir="${meta-pr1.output.dir}"/>
    <javac2 destdir="${meta-pr1.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.meta-pr1}/javac">
      <compilerarg line="${compiler.args.meta-pr1}"/>
      <bootclasspath refid="meta-pr1.module.bootclasspath"/>
      <classpath refid="meta-pr1.module.production.classpath"/>
      <src refid="meta-pr1.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.meta-pr1"/>
    </javac2>
    
    <copy todir="${meta-pr1.output.dir}">
      <fileset dir="${module.meta-pr1.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.meta-pr1.tests" depends="register.custom.compilers,compile.module.meta-pr1.production" description="compile module meta-pr1; test classes" unless="skip.tests"/>
  
  <target name="clean.module.meta-pr1" description="cleanup module">
    <delete dir="${meta-pr1.output.dir}"/>
    <delete dir="${meta-pr1.testoutput.dir}"/>
  </target>
</project>